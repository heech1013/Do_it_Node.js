doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='/topic') File directory Page
        ul
            each name in filenames
                li
                    a(href='/topic/'+name)=name
        article
            form(action='/topic' method='post')
                p
                    input(type='text' name='title' placeholder='title')
                p
                    textarea(name='des')
                p
                    input(type='submit')